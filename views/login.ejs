<div class="row">
    <div class="col-sm-8 col-sm-offset-2">
        <div class="row">
            <div class="col-sm-12">
                <form method="post" action="<%= routes.login %>">
                    <% if (message.length > 0) { %>
                            <div class="alert alert-danger"><%= message %></div>
                    <% } %>
                    <div class="form-group">
                        <label for="username">Email</label>
                        <input type="text" class="form-control" id="email" placeholder="Email" name="email">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="password" name="password">
                        
                    </div>
                    <input type="hidden" name="_csrf" value="<%= token %>">
                    <input type="submit" class="btn btn-primary btn-block" value="login">
                </form>
            </div>
        </div>
        <br>
        <div class="row top-marginrow top-margin">
            <div class="col-sm-6">
                <a class="btn btn-block facebook" href="<%= routes.facebookAuth %>"><i class="fa fa-facebook-square" aria-hidden="true"></i> Facebook</a>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-block google" href="<%= routes.googleAuth %>"><i class="fa fa-google" aria-hidden="true"></i> Google</a>
            </div>
        </div>
         <div class="row top-margin">
             <div class="col-sm-12">
                <a href="<%= routes.register %>" class="btn btn-default btn-block ">Sign-in</a>
             </div>
        </div>
    </div>
</div>
